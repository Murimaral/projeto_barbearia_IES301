<h3>Editar perfil de <%= @pet.name %></h3>
<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>
<%= form_for @pet, html: { id: 'create-form' } do |form| %>
  <p class="input-field">
    <%= form.label :name , 'Nome' %>
    <%= form.text_field :name %>
  </p>

  <p>
    <strong>Espécie</strong>
    <label for="pet_species_cat">
      <input name="pet[species]" type="radio" id="pet_species_cat" value="cat" <%= @pet.species == 'cat' ? 'checked' : '' %> />
      <span>Gato</span>
    </label>
    <label for="pet_species_dog">
      <input name="pet[species]" type="radio" id="pet_species_dog" value="dog" <%= @pet.species == 'dog' ? 'checked' : '' %> />
      <span>Cachorro</span>
    </label>
  </p>

  <p>
    <strong>Sexo</strong>
    <label for="pet_sex_female">
      <input name="pet[sex]" type="radio" id="pet_sex_female" value="female" <%= @pet.sex == 'female' ? 'checked' : '' %> />
      <span>Fêmea</span>
    </label>
    <label for="pet_sex_male">
      <input name="pet[sex]" type="radio" id="pet_sex_male" value="male" <%= @pet.sex == 'male' ? 'checked' : '' %> />
      <span>Macho</span>
    </label>
  </p>

  <p class="input-field">
    <%= form.label :breed, 'Raça' %><br>
    <%= form.text_field :breed, class: 'breed' %>
  </p>

  <p class="input-field">
    <%= form.label :color, 'Cor' %><br>
    <%= form.text_field :color, class: 'color' %>
  </p>

  <p>
    <%= form.label :image, 'Foto'%>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= form.label :details, 'Detalhes' %><br>
    <%= form.text_area :details %>
  </p>

  <p class="input-field">
    <%= form.label :city, 'Cidade' %><br>
    <%= form.text_field :city, class: 'city' %>
  </p>

  <p class="input-field">
    <%= form.label :state, 'Estado' %><br>
    <%= form.text_field :state, class: 'state' %>
  </p>

  <%= form.hidden_field :status, value: params[:status] || @pet.status %>

  <%= form.submit 'Enviar' %>
<% end %>

<script>
$(function() {
  $('.breed').autocomplete({
    data: <%= @breeds.to_json.html_safe %>,
  });

  $('.color').autocomplete({
    data: <%= @colors.to_json.html_safe %>,
  });

  $('.city').autocomplete({
    data: <%= @cities.to_json.html_safe %>,
  });

  $('.state').autocomplete({
    data: <%= @states.to_json.html_safe %>,
  });
})
</script>
