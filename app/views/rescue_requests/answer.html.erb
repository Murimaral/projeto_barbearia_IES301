<section class="rescue-request_form">
<% if @rescue_request.owner_id == current_user.id %>
  <h2>Responder ao resgatante</h2>

  <p class="center-align">
    <strong><%= @rescue_request.rescuer.name %></strong> disse em <em><%= @rescue_request.created_at %></em>:
  </p>

  <p class="center-align">"<%= @rescue_request.message %>"</p>

  <% if @rescue_request.image.attached? %>
  <p class="center-align"><%= image_tag(@rescue_request.image, class: 'circle') %></p>
  <% end %>

  <%= form_for @rescue_request do |form| %>
    <p>
      <%= form.label :reply, "Escreva uma resposta para #{@rescue_request.rescuer.name}" %><br>
      <%= form.text_area :reply %>
    </p>

    <p>
      <strong>O pet resgatado por <%= @rescue_request.rescuer.name %> é <%= @rescue_request.lost_pet.name %>?</strong>
    </p>
    <p>
      <label for="status_accepted">
        <input name="rescue_request[status]" type="radio" id="status_accepted" value="accepted" />
        <span>Sim, aceitar pedido e inativar anúncios</span>
      </label>
      <label for="status_refused">
        <input name="rescue_request[status]" type="radio" id="status_refused" value="refused" />
        <span>Não, recusar pedido e continuar procurando</span>
      </label>
    </p>
    <div class="input-field  center-align">
      <%= form.submit 'Enviar', class: 'indigo btn-large' %>
    </div>
  <% end %>
<% else %>
  <p class="center-align">
    <strong><%= @rescue_request.owner.name %></strong> disse em <em><%= @rescue_request.created_at %></em>:
  </p>

  <p class="center-align">"<%= @rescue_request.message %>"</p>

  <% if @rescue_request.image.attached? %>
  <p class="center-align"><%= image_tag(@rescue_request.image, class: 'circle') %></p>
  <% end %>

  <%= form_for @rescue_request do |form| %>
    <p>
      <%= form.label :reply, "Escreva uma resposta para #{@rescue_request.owner.name}" %><br>
      <%= form.text_area :reply %>
    </p>

    <p>
      <strong><%= @rescue_request.owner.name %> é o dono de <%= @rescue_request.found_pet.name %>?</strong>
    </p>
    <p>
      <label for="status_accepted">
        <input name="rescue_request[status]" type="radio" id="status_accepted" value="accepted" />
        <span>Sim, aceitar pedido e inativar anúncios</span>
      </label>
      <label for="status_refused">
        <input name="rescue_request[status]" type="radio" id="status_refused" value="refused" />
        <span>Não, recusar pedido e continuar procurando</span>
      </label>
    </p>
    <div class="input-field  center-align">
      <%= form.submit 'Enviar', class: 'indigo btn-large' %>
    </div>
  <% end %>
<% end %>
</section>
