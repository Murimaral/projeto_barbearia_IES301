<div class="customer-details">
  <div class="row">
    <div class="col s6">
      <div style='display: flex;'>
        <h2><%= @customer.name %></h2>

        <div style="margin-top: 16px; margin-left: 48px;">
          <%= link_to 'Alterar', edit_customer_path(@customer), class: "indigo lighten-1 btn-small" %>
        </div>
      </div>

      <h4>Telefone</h4>
      <p>
      <%= @customer.phone %>
      </p>

      <h4>Email</h4>
      <p>
      <%= @customer.email %>
      </p>

      <h4>Detalhes</h4>
      <p>
      <%= @customer.details %>
      </p>


    </div>
  </div>
</div>
