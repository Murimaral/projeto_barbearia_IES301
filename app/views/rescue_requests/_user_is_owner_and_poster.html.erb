<% if @rescue_request.lost_pet_id.present? %>
  <h2>Pedido de resgate de <%= @rescue_request.lost_pet.name %></h2>
  <%= link_to image_tag(@rescue_request.lost_pet.image), @rescue_request.lost_pet %>
  <p>
    <%= @rescue_request.lost_pet.species %>, <%= @rescue_request.lost_pet.sex %>, <%= @rescue_request.lost_pet.breed %>
  </p>

  <p>
    <%= @rescue_request.lost_pet.city %>, <%= @rescue_request.lost_pet.state %>
  </p>
<% else %>
  <h2>Pedido de resgate</h2>
<% end %>
<h3>Destinatário do pedido</h3>
<p><%= @rescue_request.rescuer.name %></p>
<p>Anúncio: 
  <%= link_to image_tag(@rescue_request.found_pet.image), @rescue_request.found_pet %>
  <%= link_to @rescue_request.found_pet.name, @rescue_request.found_pet %>
</p>
<hr>
<h2>Mensagem</h2>
<p>
  <%= @rescue_request.message %>
  <%= image_tag(@rescue_request.image) if @rescue_request.image.attached? %>
</p>
<p>
  Enviado por <%= @rescue_request.owner.name %>, <%= @rescue_request.owner.phone %>
</p>
