<div class="section no-pad-bot" id="index-banner">
  <div>
    <h1 class="header center indigo-text text-darken-4">PetFinder</h1>
    <div class="row center">
      <h5 class="header col s12 light">Feito para ajudar pets e donos a se encontrarem!</h5>
    </div>
    <div class="row center">
    <div class="col s12 m6">
      <a href="<%= new_pet_path(status: 'lost') %>" class="home_button_find pet">
      <%= image_tag("cat_01.jpg", :alt => "Estou procurando meu pet") %>
      <span>
        Estou procurando meu pet
      </span>
      </a>
    </div>
    <div class="col s12 m6">
      <a href="<%= new_pet_path(status: 'found') %>" class="home_button_find owner">
        <%= image_tag("dog_01.jpg", :alt => "Estou procurando um dono de um pet") %>
        <span>
          Estou procurando um dono de um pet
        </span>
      </a>
    </div>
    <div class="col s12 m12">
      <a href="<%= search_path %>" class="home_button_find pet search">
        <%= image_tag("dog_04.jpg", :alt => "Realizar uma busca por pet") %>
        <span>
          <i class="material-icons">search</i> Realizar uma busca por pet
        </span>
      </a>
    </div>
    </div>
    <br><br>
  </div>
</div>
<div class="row" id="pet-list">
  <h3>Ãšltimos pets cadastrados</h3>
  <% @pets.take(9).each do |pet| %>
    <div class="col s12 m4 pet-item">
      <div class="card white">
        <div class="card-content collection-item avatar">
          <%= image_tag(pet.image) %>
          <div class="pet-card__content">
            <span class="card-title"><%= link_to pet.name, pet %></span>
            <span class="pet-card__badge <%= pet.species == 'dog' ? 'amber' : 'teal' %>">
              <%= species(pet.species) %>
            </span>
            <span class="pet-card__badge <%= pet.sex == 'male' ? 'light-blue accent-4' : 'pink accent-4' %>">
              <%= sex(pet.sex) %>
            </span>
            <span class="pet-card__badge deep-purple lighten-1">
              <%= pet.breed %>
            </span><br />
            <b><%= pet.city %></b>, <%= pet.state %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $('.collapsible').collapsible();
  });
</script>