<section class="auth-form">
  <h2>Log in</h2>
  <div class="auth-form_container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, class: 'validate', autofill: false, placeholder: 'usuario@gmail.com' %>
        <%= f.label :email %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: '' %>
        <%= f.label :password, 'Senha' %>
      </div>

      <div class="center-align">
        <% if devise_mapping.rememberable? %>
            <label>
              <%= f.check_box :remember_me %>
              <span>Lembrar-se de mim</span>
            </label>
        <% end %>

        <div class="input-field">
          <%= f.submit "Log in", class: "indigo btn-large center" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</section>
